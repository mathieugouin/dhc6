<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <particlesystem>
        <name>startup</name>
        <texture>spray.png</texture>
        <emissive>false</emissive>
        <lighting>false</lighting>

        <condition>
            <and>
                <equals>
                    <property>controls/engines/internal-engine-starter</property>
                    <value>-1</value>
                </equals>
                <greater-than>
                    <property>engines/engine[1]/n2</property>
                    <value>1</value>
                </greater-than>
                <less-than>
                    <property>/controls/engines/engine[1]/condition</property>
                    <value>0.5</value>
                </less-than>
                <not>
                    <property>sim/model/equipment/right-engine-cover</property>
                </not>
            </and>
        </condition>

        <attach>world</attach>

        <placer>
            <type>point</type>
        </placer>

        <shooter>
            <theta-min-deg>85</theta-min-deg>
            <theta-max-deg>95</theta-max-deg>
            <phi-min-deg>25</phi-min-deg>
            <phi-max-deg>35</phi-max-deg>
            <speed-mps>
                <value>1.5</value>
                <spread>1</spread>
            </speed-mps>
            <rotation-speed>
                <x-max-deg-sec>15</x-max-deg-sec>
                <x-min-deg-sec>-15</x-min-deg-sec>
                <y-max-deg-sec>15</y-max-deg-sec>
                <y-min-deg-sec>-15</y-min-deg-sec>
                <z-max-deg-sec>15</z-max-deg-sec>
                <z-min-deg-sec>-15</z-min-deg-sec>
            </rotation-speed>
        </shooter>

        <counter>
            <particles-per-sec>
                <value>50</value>
                <spread>1</spread>
            </particles-per-sec>
        </counter>

        <align>billboard</align>

        <particle>
            <start>
                <color>
                    <red>
                        <value>0.3</value>
                    </red>
                    <green>
                        <value>0.3</value>
                    </green>
                    <blue>
                        <value>0.3</value>
                    </blue>
                    <alpha>
                        <value>0.3</value>
                    </alpha>
                </color>
                <size>
                    <value>0.1</value>
                </size>
            </start>
            <end>
                <color>
                    <red>
                        <value>0.6</value>
                    </red>
                    <green>
                        <value>0.6</value>
                    </green>
                    <blue>
                        <value>0.6</value>
                    </blue>
                    <alpha>
                        <value>0.01</value>
                    </alpha>
                </color>
                <size>
                    <value>0.8</value>
                </size>
            </end>
            <life-sec>
                <value>1.5</value>
            </life-sec>
            <mass-kg>0.35</mass-kg>
            <radius-m>0.1</radius-m>
        </particle>

        <program>
            <fluid>air</fluid>
            <gravity>false</gravity>
            <wind>true</wind>
        </program>

    </particlesystem>

</PropertyList>
