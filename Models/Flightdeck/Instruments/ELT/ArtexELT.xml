<!--
    ELT based on an Artex ELT (now Cobham)
    http://www.acrelectronics.com/products/b/aviation/catalog/elt-remote-switches/remote-switch-standard
    Author: Pavel Cueto
    License: GPL

    Designed to work with the "ELTmessage.nas" file provided in the instrument folder.
    Be sure to link the Nasal in your -set file, typing:
    <nasal>
        <ELT>
            <file>YOUR/INSTRUMENT/FOLDER/ROUTE/HERE/ELTmessage.nas</file>
        </ELT>
    </nasal>
-->

<PropertyList>

    <path>ArtexELT.ac</path>

    <animation>
        <type>material</type>
        <object-name>Base</object-name>
        <object-name>Tornillos</object-name>
        <!--object-name>Light-ON</object-name-->
        <object-name>Light-OFF</object-name>
        <object-name>Switch</object-name>
        <object-name>Switch.test</object-name>
        <object-name>BaseSwitch</object-name>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>Base</object-name>
        <object-name>Tornillos</object-name>
        <object-name>Light-ON</object-name>
        <object-name>Light-OFF</object-name>
        <object-name>Switch</object-name>
        <object-name>Switch.test</object-name>
        <object-name>BaseSwitch</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>Base</object-name>
        <object-name>Tornillos</object-name>
        <object-name>Light-ON</object-name>
        <object-name>Light-OFF</object-name>
        <object-name>Switch</object-name>
        <object-name>Switch.test</object-name>
        <object-name>BaseSwitch</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>SwitchUp</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/elt/armed</property>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/elt/on</property>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click2</property>
            </binding>
        </action>
        <hovered>
            <binding>
            <command>set-tooltip</command>
                <tooltip-id>elt-switch</tooltip-id>
                <label>ELT: %s</label>
                <property>instrumentation/elt/on</property>
                <mapping>nasal</mapping>
                <script>
                    var m = getprop("/instrumentation/elt/on");
                    if ( m ) return 'ON';
                    return 'ARMED';
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>SwitchDown</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable> 
            <binding>
                <command>property-assign</command>
                <property>instrumentation/elt/test</property>
                <value type="bool">true</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/elt/armed</property>
                <value type="bool">false</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/elt/on</property>
                <value type="bool">false</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click2</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/elt/test</property>
                    <value type="bool">false</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/elt/armed</property>
                    <value type="bool">false</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/elt/on</property>
                    <value type="bool">true</value>
                </binding>
                <binding>
                    <command>property-toggle</command>
                    <property>sim/sound/click2</property>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>elt-test</tooltip-id>
                <label>ELT test: %s</label>
                <property>instrumentation/elt/test</property>
                <mapping>nasal</mapping>
                <script>
                    var m = getprop("instrumentation/elt/test");
                    if ( m ) return 'ON';
                    return 'OFF';
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Switch</object-name>
        <condition>
            <not>
                <property>instrumentation/elt/test</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Switch.test</object-name>
        <condition>
            <property>instrumentation/elt/test</property>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>instrumentation/elt/on-pos</property>
        <factor>10</factor>
        <center>
            <x-m>0.003</x-m>
            <y-m>0.000</y-m>
            <z-m>0.000</z-m>
        </center>
        <axis>
            <x> 0</x>
            <y>-1</y>
            <z> 0</z>
        </axis>    
    </animation>

    <animation>
        <type>select</type>
        <object-name>Light-ON</object-name>
        <condition>
            <or>
                <property>instrumentation/elt/on</property>
                <property>instrumentation/elt/test</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Light-OFF</object-name>
        <condition>
            <not>
                <or>
                    <property>instrumentation/elt/on</property>
                    <property>instrumentation/elt/test</property>
                </or>
            </not>
        </condition>
    </animation>

    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">ELT</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.04</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m>  0.008 </x-m>
            <y-m> -0.020 </y-m>
            <z-m>  0.005 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

</PropertyList>
